<div class="card text-bg-light mb-3" style="max-width: 25rem;">
  <div class="card-header">
    <h5 class="card-title"><%= book.title %></h5>
  </div>
  <div class="card-body" id="<%= dom_id book %>">
    <p class="card-text">
      <strong>Author:</strong>
      <%= book.author %>
    </p>
    <p class="card-text">
      <strong>Genre:</strong>
      <%= book.genre %>
    </p>
    <p class="card-text">
      <strong>Year:</strong>
      <%= book.year_of_publication %>
    </p>
  </div>
</div>
